<% provide(:title, 'Tzz-blog') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3> Post feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <%= render 'shared/signup_button' %>
<% end %>